@model DATMOS.Web.Areas.Identity.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = null;
}

<!doctype html>
<html lang="vi" dir="ltr" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <title>@ViewData["Title"] - DATMOS</title>
    <meta name="description" content="Tạo tài khoản DATMOS của bạn" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome & Tabler Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@tabler/icons-webfont@latest/tabler-icons.min.css" />

    <!-- Custom CSS for Registration Page -->
    <link rel="stylesheet" href="~/areas/identity/css/register.css" />
</head>
<body>
    <div class="register-container">
        <!-- Left Side: Branding & Features -->
        <div class="register-left">
            <div class="logo">
                <div class="logo-icon">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                DATMOS
            </div>
            <div class="welcome-text">
                <h1>Chào mừng đến với DATMOS!</h1>
                <p>Tham gia cộng đồng học tập của chúng tôi và bắt đầu hành trình giáo dục của bạn ngay hôm nay.</p>
            </div>
            <ul class="feature-list">
                <li><i class="fas fa-check"></i> Truy cập không giới hạn các khóa học</li>
                <li><i class="fas fa-check"></i> Lộ trình học tập được cá nhân hóa</li>
                <li><i class="fas fa-check"></i> Theo dõi tiến độ và phân tích chi tiết</li>
                <li><i class="fas fa-check"></i> Hỗ trợ từ các giảng viên chuyên gia</li>
                <li><i class="fas fa-check"></i> Nhận chứng chỉ sau khi hoàn thành</li>
            </ul>
        </div>

        <!-- Right Side: Registration Form -->
        <div class="register-right">
            <div class="welcome-text">
                <h1 class="d-flex align-items-center">
                    <i class="ti ti-user-plus me-2"></i>
                    Tạo tài khoản
                </h1>
                <p>Điền các thông tin chi tiết của bạn để bắt đầu.</p>
            </div>

            <form asp-action="Register" method="post" id="registerForm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <!-- Email Field -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">
                        <i class="ti ti-mail"></i>Địa chỉ Email
                    </label>
                    <input asp-for="Email" class="form-control" placeholder="Nhập địa chỉ email của bạn" autocomplete="email" required />
                    <span asp-validation-for="Email" class="text-danger validation-feedback"></span>
                    <div id="emailValidationFeedback" class="validation-feedback"></div>
                </div>

                <!-- Password Field -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">
                        <i class="ti ti-lock"></i>Mật khẩu
                    </label>
                    <div class="input-group">
                        <input asp-for="Password" class="form-control" placeholder="Tạo một mật khẩu mạnh" autocomplete="new-password" required />
                        <button type="button" class="password-toggle" id="togglePassword">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger validation-feedback"></span>
                    <div class="password-strength">
                        <div id="passwordStrengthBar"></div>
                    </div>
                    <small class="text-muted d-block mt-1">Sử dụng 8+ ký tự với chữ hoa, chữ thường, số & ký hiệu.</small>
                </div>

                <!-- Confirm Password Field -->
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">
                        <i class="ti ti-lock-check"></i>Xác nhận mật khẩu
                    </label>
                    <div class="input-group">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu của bạn" autocomplete="new-password" required />
                        <button type="button" class="password-toggle" id="toggleConfirmPassword">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger validation-feedback"></span>
                    <div id="passwordMatch" class="validation-feedback"></div>
                </div>

                <!-- Terms & Conditions -->
                <div class="terms-check form-check mb-4">
                    <input asp-for="AgreeToTerms" class="form-check-input" />
                    <label asp-for="AgreeToTerms" class="form-check-label">
                        Tôi đồng ý với <a href="#">Điều khoản dịch vụ</a> và <a href="#">Chính sách bảo mật</a>
                    </label>
                    <span asp-validation-for="AgreeToTerms" class="text-danger validation-feedback d-block"></span>
                </div>

                <!-- Register Button -->
                <button type="submit" class="btn-register" id="registerButton">
                    <span class="button-text">Tạo tài khoản</span>
                    <div class="loading-spinner"></div>
                </button>
            </form>

            <!-- Divider -->
            <div class="divider">
                <span class="divider-text">Hoặc tiếp tục với</span>
            </div>

            <!-- Social Login -->
            <div class="social-login">
                <a href="#" class="social-btn google" title="Đăng ký với Google"><i class="fab fa-google"></i></a>
                <a href="#" class="social-btn facebook" title="Đăng ký với Facebook"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="social-btn github" title="Đăng ký với GitHub"><i class="fab fa-github"></i></a>
            </div>
            
            <!-- Login Link -->
            <div class="login-link">
                <span>Đã có tài khoản?</span>
                <a asp-area="Identity" asp-controller="Account" asp-action="Login">Đăng nhập</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JavaScript for UX improvements -->
    <script src="~/areas/identity/js/register.js"></script>
</body>
</html>
