@model DATMOS.Web.Areas.Identity.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!doctype html>
<html lang="vi" dir="ltr" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <title>@ViewData["Title"] - DATMOS</title>
    <meta name="description" content="Đăng nhập vào tài khoản DATMOS của bạn" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome & Tabler Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@tabler/icons-webfont@latest/tabler-icons.min.css" />

    <!-- Custom CSS for Login Page -->
    <link rel="stylesheet" href="~/areas/identity/css/login.css" />
</head>
<body>
    <div class="login-container">
        <!-- Left Side: Branding & Features -->
        <div class="login-left">
            <div class="logo">
                <div class="logo-icon">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                DATMOS
            </div>
            <div class="welcome-text">
                <h1>Chào mừng trở lại!</h1>
                <p>Tiếp tục hành trình học tập của bạn với DATMOS. Đăng nhập để truy cập vào các khóa học và tài liệu của bạn.</p>
            </div>
            <ul class="feature-list">
                <li><i class="fas fa-check"></i> Truy cập vào tất cả khóa học của bạn</li>
                <li><i class="fas fa-check"></i> Tiếp tục từ nơi bạn đã dừng lại</li>
                <li><i class="fas fa-check"></i> Theo dõi tiến độ học tập</li>
                <li><i class="fas fa-check"></i> Nhận thông báo và cập nhật mới</li>
                <li><i class="fas fa-check"></i> Kết nối với giảng viên và học viên khác</li>
            </ul>
        </div>

        <!-- Right Side: Login Form -->
        <div class="login-right">
            <div class="welcome-text">
                <h1 class="d-flex align-items-center">
                    <i class="ti ti-login me-2"></i>
                    Đăng nhập
                </h1>
                <p>Đăng nhập vào tài khoản của bạn để tiếp tục</p>
            </div>

            <form asp-action="Login" method="post" id="loginForm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <!-- Email Field -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">
                        <i class="ti ti-mail"></i>Địa chỉ Email
                    </label>
                    <input asp-for="Email" class="form-control" placeholder="Nhập địa chỉ email của bạn" autocomplete="email" required />
                    <span asp-validation-for="Email" class="text-danger validation-feedback"></span>
                </div>

                <!-- Password Field -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">
                        <i class="ti ti-lock"></i>Mật khẩu
                    </label>
                    <div class="input-group">
                        <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu của bạn" autocomplete="current-password" required />
                        <button type="button" class="password-toggle" id="togglePassword">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger validation-feedback"></span>
                </div>

                <!-- Remember Me & Forgot Password -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">
                            <i class="ti ti-checkbox me-1"></i>Ghi nhớ đăng nhập
                        </label>
                    </div>
                    <a asp-area="Identity" asp-controller="Account" asp-action="ForgotPassword" class="forgot-password">
                        <i class="ti ti-key me-1"></i>Quên mật khẩu?
                    </a>
                </div>

                <!-- Login Button -->
                <button type="submit" class="btn-login" id="loginButton">
                    <i class="ti ti-login me-2"></i>
                    <span class="button-text">Đăng nhập</span>
                    <div class="loading-spinner"></div>
                </button>
            </form>

            <!-- Divider -->
            <div class="divider">
                <span class="divider-text">Hoặc tiếp tục với</span>
            </div>

            <!-- Social Login -->
            <div class="social-login">
                <a href="#" class="social-btn google" title="Đăng nhập với Google">
                    <i class="fab fa-google"></i>
                </a>
                <a href="#" class="social-btn facebook" title="Đăng nhập với Facebook">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="#" class="social-btn github" title="Đăng nhập với GitHub">
                    <i class="fab fa-github"></i>
                </a>
            </div>
            
            <!-- Register Link -->
            <div class="register-link">
                <span>Chưa có tài khoản?</span>
                <a asp-area="Identity" asp-controller="Account" asp-action="Register">Tạo tài khoản mới</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JavaScript for Login Page -->
    <script src="~/areas/identity/js/login.js"></script>
</body>
</html>
