@model DATMOS.Web.ViewModels.UserProfileViewModel
@{
  TempData.Keep();
  // Set default values for navbar rendering
  ViewData["navbarDetached"] = (ViewData["navbarDetached"] ??= "navbar-detached");
  ViewData["containerNav"] = (ViewData["containerNav"] ??= "container-fluid");
  ViewData["navbarFull"] = true; // Enable full navbar brand for Customer area
  
  // Set NavbarArea for _Brand.cshtml to identify area correctly
  ViewData["NavbarArea"] = "Customer";
  
  // Set default TempData values if not already set
  if (TempData["appName"] == null)
  {
      TempData["appName"] = "DATMOS Learning Platform";
  }
  if (TempData["menuHorizontal"] == null)
  {
      TempData["menuHorizontal"] = false; // Default to vertical menu for Customer area
  }
  
  var navbarDetached = ViewData["navbarDetached"] as string;
  var containerNav = ViewData["containerNav"] as string;
}
  <nav
  class='layout-navbar @navbarDetached @containerNav navbar navbar-expand-xl align-items-center bg-navbar-theme customer-navbar'
  id="layout-navbar">
  
  <div class="container-xxl">
    @* Brand/Logo *@
    @await Html.PartialAsync("~/Views/Shared/Components/Navbar/Partials/_Brand.cshtml")
    
    @* Menu Toggle *@
    @await Html.PartialAsync("~/Views/Shared/Components/Navbar/Partials/_MenuToggle.cshtml")

    @* Horizontal Menu *@
    <div class="navbar-menu-wrapper flex-grow-1">
        @{
            // Set flag to indicate menu is being rendered in navbar context
            ViewData["IsInNavbar"] = true;
        }
        @await Component.InvokeAsync("Menu", new { menuType = "Customer", area = "Customer" })
    </div>

    <div class="navbar-nav-right d-flex align-items-center" id="navbar-collapse">
    <!-- Logo (Secondary - hidden on xl screens where primary brand is visible) -->
    <div class="navbar-logo me-3 d-none d-md-flex d-xl-none">
      <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="d-flex align-items-center text-decoration-none">
        <div class="avatar avatar-sm me-2">
          <span class="avatar-initial rounded-circle bg-primary">
            <i class="ti ti-book ti-sm"></i>
          </span>
        </div>
        <span class="fw-bold text-primary">DATMOS Learning</span>
      </a>
    </div>
    <!-- /Logo -->

     <ul class="navbar-nav flex-row align-items-center ms-auto">
      <!-- Course Progress -->
      <li class="nav-item dropdown-notifications navbar-dropdown dropdown me-2 me-xl-2">
        <a class="nav-link dropdown-toggle hide-arrow" href="javascript:void(0);" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
          <i class="ti ti-chart-line ti-md"></i>
          <span class="badge bg-success badge-dot"></span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end py-0">
          <li class="dropdown-menu-header border-bottom">
            <div class="dropdown-header d-flex align-items-center py-3">
              <h6 class="mb-0 me-auto">Tiến độ học tập</h6>
              <span class="badge rounded-pill bg-label-primary">Đang học</span>
            </div>
          </li>
          <li class="dropdown-notifications-list scrollable-container">
            <ul class="list-group list-group-flush">
              <li class="list-group-item list-group-item-action dropdown-notifications-item">
                <div class="d-flex">
                  <div class="flex-shrink-0 me-3">
                    <div class="avatar">
                      <span class="avatar-initial rounded-circle bg-label-primary"><i class="ti ti-file-text"></i></span>
                    </div>
                  </div>
                  <div class="flex-grow-1">
                    <h6 class="mb-1">Word 2019</h6>
                    <p class="mb-0">Đã hoàn thành: 3/12 bài học</p>
                    <div class="progress mt-2" style="height: 6px;">
                      <div class="progress-bar bg-primary" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <small class="text-muted">25% hoàn thành</small>
                  </div>
                </div>
              </li>
              <li class="list-group-item list-group-item-action dropdown-notifications-item">
                <div class="d-flex">
                  <div class="flex-shrink-0 me-3">
                    <div class="avatar">
                      <span class="avatar-initial rounded-circle bg-label-success"><i class="ti ti-table"></i></span>
                    </div>
                  </div>
                  <div class="flex-grow-1">
                    <h6 class="mb-1">Excel 2019</h6>
                    <p class="mb-0">Đã hoàn thành: 5/15 bài học</p>
                    <div class="progress mt-2" style="height: 6px;">
                      <div class="progress-bar bg-success" role="progressbar" style="width: 33%" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <small class="text-muted">33% hoàn thành</small>
                  </div>
                </div>
              </li>
              <li class="list-group-item list-group-item-action dropdown-notifications-item">
                <div class="d-flex">
                  <div class="flex-shrink-0 me-3">
                    <div class="avatar">
                      <span class="avatar-initial rounded-circle bg-label-warning"><i class="ti ti-presentation"></i></span>
                    </div>
                  </div>
                  <div class="flex-grow-1">
                    <h6 class="mb-1">PowerPoint 2019</h6>
                    <p class="mb-0">Đã hoàn thành: 2/10 bài học</p>
                    <div class="progress mt-2" style="height: 6px;">
                      <div class="progress-bar bg-warning" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <small class="text-muted">20% hoàn thành</small>
                  </div>
                </div>
              </li>
              <li class="list-group-item list-group-item-action dropdown-notifications-item">
                <div class="d-flex">
                  <div class="flex-shrink-0 me-3">
                    <div class="avatar">
                      <span class="avatar-initial rounded-circle bg-label-info"><i class="ti ti-certificate"></i></span>
                    </div>
                  </div>
                  <div class="flex-grow-1">
                    <h6 class="mb-1">Bài kiểm tra gần đây</h6>
                    <p class="mb-0">Word 2019: 85 điểm (Xuất sắc)</p>
                    <small class="text-muted">Hôm qua</small>
                  </div>
                </div>
              </li>
            </ul>
          </li>
          <li class="dropdown-menu-footer border-top">
            <a asp-area="Customer" asp-controller="Home" asp-action="Progress" class="dropdown-item d-flex justify-content-center text-primary p-2 h-px-40">
              Xem chi tiết tiến độ
            </a>
          </li>
        </ul>
      </li>
      <!-- /Course Progress -->

      @* Notifications *@
      @await Html.PartialAsync("~/Views/Shared/Components/Navbar/Partials/_Notification.cshtml")
  
      @* User Dropdown *@
      @await Html.PartialAsync("~/Views/Shared/Components/Navbar/Partials/_UserDropdown.cshtml", Model)
      
    </ul>
  </div>
  </div>
  </nav>
