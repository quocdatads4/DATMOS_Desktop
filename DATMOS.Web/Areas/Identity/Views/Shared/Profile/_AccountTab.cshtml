@model DATMOS.Web.ViewModels.UserProfileViewModel

<div class="tab-pane fade show active" id="account" role="tabpanel">
    <div class="row">
        <!-- Profile Picture Section -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <div class="mb-3">
                        @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                        {
                            <img src="@Model.ProfilePictureUrl" 
                                 class="rounded-circle img-fluid" 
                                 alt="Ảnh đại diện" 
                                 style="width: 150px; height: 150px; object-fit: cover;">
                        }
                        else
                        {
                            <img src="~/img/avatars/1.png" 
                                 class="rounded-circle img-fluid" 
                                 alt="Ảnh đại diện" 
                                 style="width: 150px; height: 150px; object-fit: cover;">
                        }
                    </div>
                    
                    <h5 class="card-title">@Model.DisplayName</h5>
                    <p class="text-muted mb-3">
                        @if (!string.IsNullOrEmpty(Model.UserRole))
                        {
                            <span class="badge bg-primary">@Model.UserRole</span>
                        }
                    </p>
                    
                    <form asp-action="UploadProfilePicture" asp-controller="Profile" 
                          asp-area="@ViewContext.RouteData.Values["area"]" 
                          method="post" enctype="multipart/form-data" class="mb-2">
                        @Html.AntiForgeryToken()
                        <div class="input-group">
                            <input type="file" class="form-control" name="profilePicture" 
                                   accept=".jpg,.jpeg,.png,.gif" id="profilePictureInput">
                            <button class="btn btn-outline-primary" type="submit">
                                <i class="ti ti-upload me-1"></i> Tải lên
                            </button>
                        </div>
                        <small class="form-text text-muted">Chấp nhận: JPG, PNG, GIF (tối đa 5MB)</small>
                    </form>
                    
                    @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                    {
                        <form asp-action="DeleteProfilePicture" asp-controller="Profile" 
                              asp-area="@ViewContext.RouteData.Values["area"]" method="post" class="mt-2">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                <i class="ti ti-trash me-1"></i> Xóa ảnh
                            </button>
                        </form>
                    }
                </div>
            </div>
            
            <!-- Account Info Card -->
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">Thông tin tài khoản</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="ti ti-calendar me-2"></i>
                            <strong>Ngày tạo:</strong> 
                            @Model.CreatedAt.ToString("dd/MM/yyyy")
                        </li>
                        <li class="mb-2">
                            <i class="ti ti-login me-2"></i>
                            <strong>Đăng nhập cuối:</strong> 
                            @(Model.LastLoginAt?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa đăng nhập")
                        </li>
                        <li class="mb-2">
                            <i class="ti ti-edit me-2"></i>
                            <strong>Cập nhật cuối:</strong> 
                            @(Model.LastProfileUpdate?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa cập nhật")
                        </li>
                        <li>
                            <i class="ti ti-circle-check me-2"></i>
                            <strong>Trạng thái:</strong> 
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                @(Model.IsActive ? "Hoạt động" : "Không hoạt động")
                            </span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        
        <!-- Profile Form Section -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Chỉnh sửa thông tin cá nhân</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateAccount" asp-controller="Profile" 
                          asp-area="@ViewContext.RouteData.Values["area"]" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="row">
                            <!-- Dòng 1: Họ và tên + Email -->
                            <div class="mb-3 col-md-6">
                                <label asp-for="FullName" class="form-label"><i class="ti ti-user me-2"></i>Họ và tên</label>
                                <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" value="@Model.FullName">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3 col-md-6">
                                <label asp-for="Email" class="form-label"><i class="ti ti-mail me-2"></i>Email</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email" value="@Model.Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <!-- Dòng 2: Số điện thoại + Display Name -->
                            <div class="mb-3 col-md-6">
                                <label asp-for="PhoneNumber" class="form-label"><i class="ti ti-phone me-2"></i>Số điện thoại</label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" value="@Model.PhoneNumber">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3 col-md-6">
                                <label asp-for="DisplayName" class="form-label"><i class="ti ti-id me-2"></i>Tên hiển thị</label>
                                <input asp-for="DisplayName" class="form-control" placeholder="Nhập tên hiển thị" value="@Model.DisplayName">
                                <span asp-validation-for="DisplayName" class="text-danger"></span>
                            </div>
                        </div>
                        
                        
                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="ti ti-device-floppy me-1"></i> Lưu thay đổi
                            </button>
                            <a asp-action="Account" asp-controller="Profile" 
                               asp-area="@ViewContext.RouteData.Values["area"]" 
                               class="btn btn-outline-secondary">
                                <i class="ti ti-x me-1"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
