@* Customer Menu Items *@
<!-- Menu -->
<aside id="layout-menu" class="layout-menu-horizontal menu-horizontal menu flex-grow-0">
  <div class="container-xxl d-flex h-100">
    <ul class="menu-inner">
      <!-- Trang chủ -->
      <li class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
        <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="menu-link">
          <i class="menu-icon icon-base ti ti-smart-home"></i>
          <div>Trang chủ</div>
        </a>
      </li>

      <!-- Khóa học -->
      <li class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Course" ? "active" : "")">
        <a href="javascript:void(0)" class="menu-link menu-toggle">
          <i class="menu-icon icon-base ti ti-book"></i>
          <div>Khóa học</div>
        </a>
        <ul class="menu-sub">
          <li class="menu-item">
            <a asp-area="Customer" asp-controller="Course" asp-action="Index" class="menu-link">
              <i class="menu-icon icon-base ti ti-list"></i>
              <div>Tất cả khóa học</div>
            </a>
          </li>
          <li class="menu-item">
            <a asp-area="Customer" asp-controller="Course" asp-action="MyCourses" class="menu-link">
              <i class="menu-icon icon-base ti ti-notebook"></i>
              <div>Khóa học của tôi</div>
            </a>
          </li>
        </ul>
      </li>

      <!-- Thi thử -->
      <li class="menu-item">
        <a href="javascript:void(0)" class="menu-link menu-toggle">
          <i class="menu-icon icon-base ti ti-certificate"></i>
          <div>Thi thử MOS</div>
        </a>
        <ul class="menu-sub">
          <li class="menu-item">
            <a href="javascript:void(0)" class="menu-link">
              <i class="menu-icon icon-base ti ti-file-word"></i>
              <div>Word 2019</div>
            </a>
          </li>
          <li class="menu-item">
            <a href="javascript:void(0)" class="menu-link">
              <i class="menu-icon icon-base ti ti-file-spreadsheet"></i>
              <div>Excel 2019</div>
            </a>
          </li>
          <li class="menu-item">
            <a href="javascript:void(0)" class="menu-link">
              <i class="menu-icon icon-base ti ti-presentation"></i>
              <div>PowerPoint 2019</div>
            </a>
          </li>
        </ul>
      </li>

      <!-- Tiến độ -->
      <li class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Progress" ? "active" : "")">
        <a asp-area="Customer" asp-controller="Home" asp-action="Progress" class="menu-link">
          <i class="menu-icon icon-base ti ti-chart-bar"></i>
          <div>Tiến độ</div>
        </a>
      </li>

      <!-- Hỗ trợ -->
      <li class="menu-item">
        <a asp-area="Customer" asp-controller="Home" asp-action="Contact" class="menu-link">
          <i class="menu-icon icon-base ti ti-headset"></i>
          <div>Hỗ trợ</div>
        </a>
      </li>
    </ul>
  </div>
</aside>
<!-- / Menu -->