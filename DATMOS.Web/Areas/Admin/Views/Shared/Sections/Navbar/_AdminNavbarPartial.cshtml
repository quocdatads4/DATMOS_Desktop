@* ! Brand demo (display only for navbar-full and hide on below xl) *@
@if (ViewData["navbarFull"] != null)
{
  var menuHorizontalValue = TempData.Peek("menuHorizontal")?.ToString();
  var isMenuHorizontal = menuHorizontalValue != null && Convert.ToBoolean(menuHorizontalValue);
  
  <div class="navbar-brand app-brand demo d-none d-xl-flex py-0 me-4">
  <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="app-brand-link">
      <span class="app-brand-logo demo">
        @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_Partials/_AdminMacros.cshtml")
      </span>
      <span class="app-brand-text demo menu-text fw-bold">@(TempData.Peek("appName")?.ToString() ?? "DATMOS Admin")</span>
    </a>

    @* ! Display menu close icon only for horizontal-menu with navbar-full *@
    @if (isMenuHorizontal)
    {
      <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-xl-none">
        <i class="ti ti-x ti-md align-middle"></i>
      </a>
    }
  </div>
}

@* ! Not required for layout-without-menu *@
@if (ViewData["navbarHideToggle"] == null)
{
  var menuHorizontalValue2 = TempData.Peek("menuHorizontal")?.ToString();
  var isMenuHorizontal2 = menuHorizontalValue2 != null && Convert.ToBoolean(menuHorizontalValue2);
  var hasContentNavbar = ViewData["contentNavbar"] != null && Convert.ToBoolean(ViewData["contentNavbar"]);
  
  <div
  class='layout-menu-toggle navbar-nav align-items-xl-center me-3 me-xl-0  @(isMenuHorizontal2 ? "" : "d-xl-none") @(hasContentNavbar ? "" : "d-xl-none")'>
  <a class="nav-item nav-link px-0 me-xl-4" href="javascript:void(0)">
    <i class="ti ti-menu-2 ti-md"></i>
